<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    li {
        display: inline;
        padding: 5px;
    }
</style>
<ul>
    <li><a href="/">Home</a></li>
    <% if(!currentUser) { %>
        <li><a href="/auth">Login / Register</a></li>
    <% } else { %>
        <li><a href="/tasks">Tasks</a></li>
        <li><a href="/tasks/new">New Task</a></li>
        <li><span>Welcome, <%= currentUser.username %>. </span><a href="/auth/logout">Logout</a></li>
    <% } %>
</ul>
