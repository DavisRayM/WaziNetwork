<% layout('layouts/auth-boilerplate') %>

<div class="container align-self-center" id="auth-container">
    <div class="row max-height">
        <div class="col-lg-5 d-none d-lg-block" id="info-display">
            <% include ./partials/info-carousel-partial %>
        </div>

        <div class="col-lg-7 max-width" id="form-container">
            <div class="row d-flex justify-content-center mt-3 ml-0 mb-3 mr-0">
                <div class="action-link active" id="login-button">
                    LOGIN
                </div>

                <div class="action-link" id="register-button">
                    REGISTER
                </div>
            </div>

            <div id="login-form" class="container">
                <form action="/auth/login" method="POST">
                    <div class="form-group">
                        <label for="usernameInput" class="form-text">Username</label>
                        <input type="text" name="username" id="usernameInput" class="form-control form-input"
                            placeholder="Enter Username" required>
                        <label for="usernameInput" class="form-error"><%= error.username %></label>
                    </div>
                    <div class="form-group">
                        <label for="passwordInput" class="form-text">Password</label>
                        <input type="password" name="password" class="form-control form-input" id="passwordInput"
                            placeholder="Password" required>
                        <label for="passwordInput" class="form-error"><%= error.password %></label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary form-button">LOGIN</button>
                    </div>
                </form>
            </div>

            <div id="signup-form" class="container d-none">
                <form action="/auth/register" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="username" id="usernameInput2" class="form-control form-input"
                            placeholder="Username" required>
                        <label for="usernameInput2" class="form-error"><%= error.username %></label>
                    </div>

                    <div class="row pb-2">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="First name" name="fname">
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Last name" name="lname">
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="email" name="email" id="emailInput" class="form-control form-input"
                            placeholder="Email" required>
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" class="form-control form-input" id="passwordInput2"
                            placeholder="Password" required>
                        <label for="passwordInput2" class="form-error"><%= error.password %></label>
                    </div>

                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input name="cv-upload" type="file" class="custom-file-input" id="cvUpload" aria-describedby="inputCVUpload" accept="application/pdf"
                                required>
                            <label class="custom-file-label" for="cvUpload">Choose CV file - *pdf</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="number" name="contact_number" class="form-control form-input"
                            placeholder="Phone number -- Optional">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary form-button">SIGN UP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
